<!-- LG and XL Screens Only -->
<div class="container-fluid px-0 d-none d-lg-block">
    <div class="row my-6 px-0">
        <div class="d-none d-lg-block col-lg-1"></div>
        <div class="col-12 px-4 col-lg-10 px-lg-0">
            <div class="row px-0">
                <div class="col-8">
                    <div class="row my-4">                    
                        {{#each imagesComponentRight.smallImage.topRow}}
                            <div class="col-3">
                                <div class="container px-0 shadow-sm {{ this.animation }}">
                                    <div class="content">
                                        <div class="content-overlay"></div>
                                        <img src="{{ this.src }}" class="img-fluid small-door-image" alt="{{ this.alt }}">
                                        <div class="content-details fadeIn-bottom">
                                            <h6 class="content-title">DESIGN: {{ this.design }}</h6>
                                            <p class="content-text">Glass: {{ this.glass }}</p>
                                        </div>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        {{/each}}
                    </div>
                    <div class="row">
                        {{#each imagesComponentRight.smallImage.bottomRow}}
                            <div class="col-3">
                                <div class="container px-0 shadow-sm {{ this.animation }}">
                                    <div class="content">
                                        <div class="content-overlay"></div>
                                        <img src="{{ this.src }}" class="img-fluid small-door-image" alt="{{ this.alt }}">
                                        <div class="content-details fadeIn-bottom">
                                            <h6 class="content-title">DESIGN: {{ this.design }}</h6>
                                            <p class="content-text">Glass: {{ this.glass }}</p>
                                        </div>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        {{/each}}
                    </div>
                </div>
                <div class="col-4">
                    {{#unless partialContextSrc}}
                        <img src="{{ imagesComponentRight.largeImage.src.[0] }}" class="img-fluid large-door-image shadow-md {{ imagesComponentRight.largeImage.animation }}" alt="Responsive image {{ imagesComponentRight.largeImage.alt.[0] }}">
                    {{/unless}}

                    {{#if partialContextSrc}}
                        <img src="{{ partialContextSrc }}" class="img-fluid large-door-image shadow-md {{ imagesComponentRight.largeImage.animation }}" alt="Responsive image {{ partialContextAlt }}">
                    {{/if}}
                </div>
            </div>
        </div>
        <div class="d-none d-lg-block col-lg-1"></div>
    </div>
</div>

