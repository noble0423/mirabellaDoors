<div class="row my-6">
    <div class="col-1"></div>
    <div class="col-10 mb-4">
        <div class="row wrapper-shadow">
            <div class="col-7 px-0 ml-225 arrow-left {{ arrowComponentLeft.animation.arrow }}" style="background-color: white;">
                <div class="row">
                    <div class="col-10 mb-4">
                        <h2 class="text-center ml-6 mt-5 mb-5">{{ arrowComponentLeft.title }}</h2>
                        
                        <div id="{{ arrowComponentLeft.wording.id }}">
                        {{#each arrowComponentLeft.wording.paragraphs}}
                            <p class="ml-6 text-justify">{{this}}</p>
                        {{/each}}
                        </div>
                    </div>
                    <div class="col-2"></div>
                </div>
            </div>
            <div class="col-5 px-0 ml-n475 arrow-left-img" style="background-image: url('{{ arrowComponentLeft.image.src }}')" id="{{ arrowComponentLeft.image.id }}">
                {{!-- <img src="{{ arrowComponentLeft.image.src }}" class="img-fluid ml-n55 {{ arrowComponentLeft.animation.image }}" id="pamHeadshot" style="max-height: 500px" alt="{{ arrowComponentLeft.image.alt }}"> --}}
            </div>
        </div>
    </div>
    <div class="col-1"></div>
</div>