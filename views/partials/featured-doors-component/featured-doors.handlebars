                                            <h6 class="content-title">DESIGN: {{this.design }}</h6>
                                            <p class="content-text">Glass: {{ this.glass }}</p>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        </div>
                    {{/each}}

                </div>
            </div>
        </div>

        <div class="col-md-2"></div>
        <div class="col-md-8">

            <div class="card-deck mx-0 mb-6 d-none d-md-block d-lg-block d-xl-none text-center">
